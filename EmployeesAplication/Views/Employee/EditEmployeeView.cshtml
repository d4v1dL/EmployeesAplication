@model EmployeesApplication.Models.Employee

<div class="container mt-5">
    <h1 class="text-center mb-4">Editar Funcionário</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FullName" class="font-weight-bold">Nome</label>
            <input asp-for="FullName" class="form-control" placeholder="Digite o nome completo" />
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="font-weight-bold">Telefone</label>
            <input asp-for="Phone" class="form-control" id="phone" placeholder="(XX) XXXXX-XXXX" />
        </div>
        <div class="form-group">
            <label asp-for="Address" class="font-weight-bold">Endereço</label>
            <input asp-for="Address" class="form-control" placeholder="Digite o endereço" />
        </div>
        <div class="form-group">
            <label asp-for="City" class="font-weight-bold">Cidade</label>
            <input asp-for="City" class="form-control" placeholder="Digite a cidade" />
        </div>
        <div class="form-group">
            <label asp-for="PostalCode" class="font-weight-bold">CEP</label>
            <input asp-for="PostalCode" class="form-control" id="cep" placeholder="00000-000" />
        </div>
        <div class="form-group">
            <label asp-for="Salary" class="font-weight-bold">Salário</label>
            <input asp-for="Salary" class="form-control" id="salary" placeholder="R$ 0.000,00" />
        </div>
        <div class="form-group">
            <label asp-for="JobDescription" class="font-weight-bold">Descrição do Cargo</label>
            <textarea asp-for="JobDescription" class="form-control" rows="3" placeholder="Digite a descrição do cargo"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#phone').mask('(00) 00000-0000');
            $('#cep').mask('00000-000');
            $('#salary').mask('000.000.000.000.000,00', { reverse: true });
        });
    </script>
}
